  <script>
    function toggleFavorite(button) {
      const svg = button.querySelector("svg");
      const isFavorited = svg.classList.contains("fill-blue-700");

      if (isFavorited) {
        svg.classList.remove("fill-blue-700");
        svg.classList.add("fill-none");
        button.classList.remove("bg-blue-700", "text-white");
        button.classList.add("text-blue-700", "border-blue-700");
      } else {
        svg.classList.remove("fill-none");
        svg.classList.add("fill-blue-700");
        button.classList.remove("text-blue-700", "border-blue-700");
        button.classList.add("bg-blue-700", "text-white");
      }
    }
  </script>
